  { src: '/galeria/img15.avif', alt: 'Instalación y Corroboración eléctrica' },
  { src: '/galeria/img16.avif', alt: 'Instalación y Corroboración eléctrica' },
  { src: '/galeria/img17.avif', alt: 'Instalación y Corroboración eléctrica' },
  { src: '/galeria/img19.avif', alt: 'Instalación de cámaras' },
  { src: '/galeria/img20.avif', alt: 'Instalación de cámaras' },
