  { src: '/galeria/img3.avif', alt: 'Instalación eléctrica' },
  { src: '/galeria/img4.avif', alt: 'Instalación eléctrica' },
  { src: '/galeria/img5.avif', alt: 'Instalación eléctrica' },
  { src: '/galeria/img6.avif', alt: 'Instalación eléctrica' },
  { src: '/galeria/img7.avif', alt: 'Instalación y Revisión CCTV' },
  { src: '/galeria/img9.avif', alt: 'Instalación de Red y Servidores' },
