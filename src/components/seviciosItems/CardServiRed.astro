---
interface Service {
    service: string;
}

const { serviRed, title, path, alt } = Astro.props
---

<div class="w-full h-full p-3 flex justify-center items-center">
    <div class="bg-[#273136] text-white shadow-2xl transition-all rounded-lg max-h-96 h-full w-full">
        <h1 class="text-4xl font-bold text-white pt-4 pb-2 flex justify-center gap-x-2">
            <!-- <img src="/src/assets/red.svg" alt="Logo sistema red"> -->
            {title}
        </h1>
        <ul class="[&>li]:flex [&>li]:justify-start [&>li]:gap-x-2 [&>li]:px-4 [&>li]:w-full py-4 px-10 w-full space-y-2 text-md flex flex-col place-content-center overflow-ellipsis overflow-hidden whitespace-nowrap">
            {serviRed.map((service: Service) => (
                <li>
                    <img src={path} alt={alt} >
                    {service}
                </li>
            ))}
        </ul>
    </div>
</div>