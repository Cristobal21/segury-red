---
import CardServiElect from "./seviciosItems/CardServiElect.astro";
import CardServiRed from "./seviciosItems/CardServiRed.astro";
import CardServiInfor from "./seviciosItems/CardServiInfor.astro";

const serviElect = ["Planificación y Diseño de Sistema Eléctrico", "Instalación de la Infraestructura Eléctrica", "Instalación de Equipos Eléctricos", "Pruebas y Verificaciones", "Cumplimiento de Normativas y Seguridad", "Documentación y Capacitación", "Entrega y Aprobación"];
const serviRed = [
  "Planificación y Diseño de la Red",
  "Adquisición de Equipos y Materiales",
  "Instalación de Cableado y Hardware",
  "Configuración de Dispositivos de Red",
  "Configuración de los Dispositivos de Usuario",
  "Pruebas de la Red",
  "Documentación",
  "Mantenimiento y Monitoreo"
]
const serviInfor = [
  "Planificación y Diseño",
  "Instalación de Hardware",
  "Instalación de Software",
  "Configuración de la Red y Servidores",
  "Configuración de Dispositivos de Usuario",
  "Pruebas de Funcionamiento",
  "Documentación",
  "Capacitación",
  "Mantenimiento y Soporte Continuo",
]
---

<div id="servicios" class="min-h-dvh flex justify-center items-center ">
    <section class="grid grid-cols-2 grid-rows-2 w-full h-screen">
        <CardServiElect serviElect={serviElect} title="Instalación Sistema Eléctrico" alt="Icon electricidad" path="/src/assets/bolt-outline.svg" />
        <CardServiRed serviRed={serviRed} title="Instalación Sistema de Red" alt="Icon red" path="/src/assets/network.svg" />
        <CardServiInfor serviInfor={serviInfor} title="Instalación Sistema Informático" alt="Icon informatica" path="/src/assets/computer.svg" />
    </section>
</div>