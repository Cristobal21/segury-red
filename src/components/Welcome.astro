---
import Servicios from "./Servicios.astro";
import Clientes from "./Clientes.astro"
import Sistemas from "./Sistemas.astro"
import Contacto from "./Contacto.astro"
import HeaderVertical from "./navigation/HeaderVertical.astro";
import Footer from "./Footer.astro";
---

<div id="container" class="bg-[#eee] h-full">
	<main>
		<div class="flex">
			<section class="w-96">
				<HeaderVertical />
			</section>
			<section class="w-full">
				<section class="w-full">
					<Servicios />
					<Clientes />
					<Sistemas />
					<Contacto />
				</section>
				<section class="w-full">
					<Footer />
				</section>
			</section>
		</div>
	</main>
</div>
