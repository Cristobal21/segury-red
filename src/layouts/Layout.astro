---
const { title, description } = Astro.props;

// Descripción por defecto (fallback global)
const defaultDescription =
  "SeguryRed ofrece soluciones profesionales en instalaciones eléctricas, redes, CCTV, soporte técnico y sistemas de seguridad en Chile. Seguridad, eficiencia y respaldo técnico certificado.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/seguryred.webp" />
    <meta name="generator" content={Astro.generator} />

    <!-- Title -->
    <title>{title || "Servicios TI y Seguridad | SeguryRed"}</title>

    <!-- ✅ Meta description dinámica -->
    <meta
      name="description"
      content={description || defaultDescription}
    />

    <!-- Keywords -->
    <meta
      name="keywords"
      content="SeguryRed, Servicios TI, Redes, CCTV, Soporte Técnico, Seguridad Electrónica, Instalación de Redes, Mantenimiento de Redes, Soluciones de Seguridad, Tecnología de la Información"
    />

    <meta name="CAVC" content="SeguryRed" />
    <meta name="robots" content="index, follow" />

    <!-- ✅ Open Graph -->
    <meta property="og:title" content={title || "Servicios TI y Seguridad | SeguryRed"} />
    <meta
      property="og:description"
      content={description || defaultDescription}
    />
    <meta property="og:image" content="/seguryred.webp" />
    <meta property="og:url" content="https://seguryred.cl" />
    <meta property="og:type" content="website" />

    <!-- ✅ Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title || "Servicios TI y Seguridad | SeguryRed"} />
    <meta name="twitter:description" content={description || defaultDescription} />
    <meta name="twitter:image" content="/seguryred.webp" />

    <!-- Canonical -->
    <link rel="canonical" href="https://seguryred.cl" />
  </head>

  <body class="grid min-h-dvh grid-rows-[auto_1fr_auto] bg-[#eee]">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  @media (prefers-reduce-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
